<QueueWorkerRouterConfig xmlns="http://www.eclipse.org/smila/queue">

  <Rule Name="Default ADD Rule">
    <Condition>Operation='ADD' and DataSourceID='source'</Condition>
    <Task>
      <Send BrokerId="broker1" Queue="queue1" PersistentDelivery="false" WithAttachments="true">
        <SetProperty Name="doSomething">yes</SetProperty>
      </Send>
    </Task>
  </Rule>
  
  <Rule Name="ADD Rule 2">
    <Condition>Operation='ADD' and DataSourceID='source2'</Condition>
    <Task>
      <Send BrokerId="broker1" Queue="queue1"/>
    </Task>
  </Rule>
  
  <Rule Name="ADD Rule 3">
    <Condition>Operation='ADD' and DataSourceID='source3'</Condition>
    <Task>
      <Send BrokerId="broker1" Queue="queue1"/>
    </Task>
  </Rule>

  <Rule Name="DLQ ADD Rule">
    <Condition>Operation='ADD' and DataSourceID LIKE 'error_%'</Condition>
    <Task>
      <Send BrokerId="broker1" Queue="queue1" RecordFilter="nothing"/>
    </Task>
  </Rule>
  
</QueueWorkerRouterConfig>
