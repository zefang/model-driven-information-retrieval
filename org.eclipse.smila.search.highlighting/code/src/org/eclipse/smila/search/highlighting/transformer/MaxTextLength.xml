<ParameterDefinition xmlns="http://www.brox.de/ParameterDefinition" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.brox.de/ParameterDefinition ../xml/ParameterDefinition.xsd">
 <Parameter xsi:type="String" Name="MarkupPrefix" Constraint="optional">
    <Description>The markup prefix used for highlighting.</Description>
    <Default>&lt;b&gt;</Default>
  </Parameter>
 <Parameter xsi:type="String" Name="MarkupSuffix" Constraint="optional">
    <Description>The markup suffix used for highlighting.</Description>
    <Default>&lt;/b&gt;</Default>
  </Parameter>
  <Parameter xsi:type="Integer" Name="MaxLength" Constraint="optional">
    <Description>Max length of returned text structure.</Description>
    <Default>300</Default>  
  </Parameter>
</ParameterDefinition>
