<DataSourceConnectionConfig
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../it.polimi.mdir.crawler.webml/schemas/WebMLDataSourceConnectionConfigSchema.xsd"
>
  <DataSourceID>webml</DataSourceID>
  <SchemaID>it.polimi.mdir.crawler.webml</SchemaID>
  <DataConnectionID>
    <Crawler>WebMLCrawler</Crawler>
  </DataConnectionID>
  <RecordBuffer Size="40" FlushInterval="3000" />  
  <DeltaIndexing>disabled</DeltaIndexing>  
  <Attributes>
	<Attribute Type="String" Name="FileName" HashAttribute="true">
      <FileAttributes>FileName</FileAttributes>
    </Attribute>
    <Attribute Type="String" Name="Path" HashAttribute="true">
      <FileAttributes>Path</FileAttributes>
    </Attribute>
    <Attribute Type="String" Name="projectId" KeyAttribute="true">
      <FileAttributes>projectId</FileAttributes>
    </Attribute>
    <Attribute Type="String" Name="xmiContent" HashAttribute="true">
      <FileAttributes>xmiContent</FileAttributes>
    </Attribute>
  </Attributes>
  <Process>
    <BaseDir>c:\WebML_models_001</BaseDir>
    <Filter Recursive="true" CaseSensitive="false">
      <Include Name="*.xmi"/>                  
    </Filter>
  </Process>
</DataSourceConnectionConfig>
