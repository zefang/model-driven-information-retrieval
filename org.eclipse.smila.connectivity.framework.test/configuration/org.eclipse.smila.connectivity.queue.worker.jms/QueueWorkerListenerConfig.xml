<QueueWorkerListenerConfig xmlns="http://www.eclipse.org/smila/queue">

  <Rule Name="ADD Rule 1" WaitMessageTimeout="10">
    <Source BrokerId="broker1" Queue="dynamicQueues/smila/connectivity"/>
    <Condition>Operation='ADD'</Condition>
    <Task>
      <Process Workflow="EchoPipeline"/>
    </Task>
  </Rule>
  <Rule Name="DELETE Rule 1" WaitMessageTimeout="10">
    <Source BrokerId="broker1" Queue="dynamicQueues/smila/connectivity"/>
    <Condition>Operation='DELETE'</Condition>
    <Task>
      <Process Workflow="EchoPipeline"/>
      <Send BrokerId="broker1" Queue="dynamicQueues/smila/connectivity_delete" RecordFilter="nothing">
        <SetProperty Name="doAdd">yes add</SetProperty>
      </Send>
    </Task>
  </Rule>
  <Rule Name="DELETE Rule 2" WaitMessageTimeout="10">
    <Source BrokerId="broker1" Queue="dynamicQueues/smila/connectivity"/>
    <Condition>Operation='DELETE' and doAdd='yes add'</Condition>
    <Task>
      <Process Workflow="EchoPipeline"/>
      <Send BrokerId="broker1" Queue="dynamicQueues/smila/connectivity_delete" RecordFilter="nothing">
        <SetProperty Name="doAdd">yes add it again</SetProperty>
      </Send>
    </Task>
  </Rule>
  <Rule Name="DELETE Rule 3" WaitMessageTimeout="10">
    <Source BrokerId="broker1" Queue="dynamicQueues/smila/connectivity"/>
    <Condition>Operation='DELETE' and doAdd='yes add it again'</Condition>
    <Task>
      <Process Workflow="EchoPipeline"/>
      <Send BrokerId="broker1" Queue="dynamicQueues/smila/connectivity_delete"  RecordFilter="nothing">
        <SetProperty Name="doAdd">no, thanks</SetProperty>
      </Send>
    </Task>
  </Rule>

</QueueWorkerListenerConfig>
