<process name="AddFeedPipeline" targetNamespace="http://www.eclipse.org/smila/processor"
  xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:proc="http://www.eclipse.org/smila/processor" xmlns:rec="http://www.eclipse.org/smila/record">

  <import location="processor.wsdl" namespace="http://www.eclipse.org/smila/processor"
    importType="http://schemas.xmlsoap.org/wsdl/" />

  <partnerLinks>
    <partnerLink name="Pipeline" partnerLinkType="proc:ProcessorPartnerLinkType" myRole="service" />
  </partnerLinks>

  <extensions>
    <extension namespace="http://www.eclipse.org/smila/processor" mustUnderstand="no" />
  </extensions>

  <variables>
    <variable name="request" messageType="proc:ProcessorMessage" />
  </variables>

  <sequence>
    <receive name="start" partnerLink="Pipeline" portType="proc:ProcessorPortType"
      operation="process" variable="request" createInstance="yes" />

    <!-- extract mimetype -->
    <extensionActivity>
      <proc:invokePipelet name="invokeMimeTypeExtraction">
        <proc:pipelet class="org.eclipse.smila.processing.pipelets.SubAttributeExtractorPipelet" />
        <proc:variables input="request" output="request" />
        <proc:configuration>
          <rec:Val key="inputPath">Contents/Type</rec:Val>
          <rec:Val key="outputPath">MimeType</rec:Val>
          <rec:Val key="mode">FIRST</rec:Val>
        </proc:configuration>
      </proc:invokePipelet>
    </extensionActivity>

    <!-- extract content -->
    <extensionActivity>
      <proc:invokePipelet name="invokeContentExtraction">
        <proc:pipelet class="org.eclipse.smila.processing.pipelets.SubAttributeExtractorPipelet" />
        <proc:variables input="request" output="request" />
        <proc:configuration>
          <rec:Val key="inputPath">Contents/Value</rec:Val>
          <rec:Val key="outputPath">Content</rec:Val>
          <rec:Val key="mode">ALL_AS_ONE</rec:Val>
        </proc:configuration>
      </proc:invokePipelet>
    </extensionActivity>

    <!-- extract link Hrefs -->
    <extensionActivity>
      <proc:invokePipelet name="invokeMimeTypeExtraction">
        <proc:pipelet class="org.eclipse.smila.processing.pipelets.SubAttributeExtractorPipelet" />
        <proc:variables input="request" />
        <proc:configuration>
          <rec:Val key="inputPath">Links/Href</rec:Val>
          <rec:Val key="outputPath">Url</rec:Val>
          <rec:Val key="mode">FIRST</rec:Val>
        </proc:configuration>
      </proc:invokePipelet>
    </extensionActivity>


    <!-- extract author names -->
    <extensionActivity>
      <proc:invokePipelet name="invokeAuthorExtraction">
        <proc:pipelet class="org.eclipse.smila.processing.pipelets.SubAttributeExtractorPipelet" />
        <proc:variables input="request" />
        <proc:configuration>
          <rec:Val key="inputPath">Authors/Name</rec:Val>
          <rec:Val key="outputPath">Author</rec:Val>
          <rec:Val key="mode">ALL_AS_LIST</rec:Val>
        </proc:configuration>
      </proc:invokePipelet>
    </extensionActivity>

    <!-- extract text from html and xml content -->
    <if name="conditionIsHtml">
      <condition>($request.records/rec:Record[1]/rec:Val[@key="MimeType"] = "text/html")
        or
        ($request.records/rec:Record[1]/rec:Val[@key="MimeType"] = "text/xml")</condition>
      <extensionActivity>
        <proc:invokePipelet name="invokeHtml2Txt">
          <proc:pipelet class="org.eclipse.smila.processing.pipelets.HtmlToTextPipelet" />
          <proc:variables input="request" />
          <proc:configuration>
            <rec:Val key="inputType">ATTRIBUTE</rec:Val>
            <rec:Val key="outputType">ATTRIBUTE</rec:Val>
            <rec:Val key="inputName">Content</rec:Val>
            <rec:Val key="outputName">Content</rec:Val>
          </proc:configuration>
        </proc:invokePipelet>
      </extensionActivity>
    </if>

    <extensionActivity>
      <proc:invokePipelet name="invokeSolrPipelet">
        <proc:pipelet class="org.eclipse.smila.integration.solr.SolrIndexPipelet" />
        <proc:variables input="request" />
        <proc:configuration>
          <rec:Val key="executionMode">ADD</rec:Val>
          <rec:Val key="allowDoublets" type="boolean">false</rec:Val>
          <rec:Val key="commitWithin" type="long">10000</rec:Val>
          <rec:Val key="indexname">test_index</rec:Val>
        </proc:configuration>
      </proc:invokePipelet>
    </extensionActivity>

    <reply name="end" partnerLink="Pipeline" portType="proc:ProcessorPortType" operation="process"
      variable="request" />
    <exit />
  </sequence>
</process>
