<QueueWorkerRouterConfig xmlns="http://www.eclipse.org/smila/queue">

  <Rule Name="Default ADD Rule">
    <Condition>Operation='ADD' and DataSourceID='testDataSource'</Condition>
    <Task>
      <Send BrokerId="broker1" Queue="dynamicQueues/SMILA/connectivity" RecordFilter="only-attributes">
        <SetProperty Name="doAdd">yes add</SetProperty>
      </Send>
    </Task>
  </Rule>
  
  
  <Rule Name="Default DELETE Rule">
    <Condition>Operation='DELETE' and DataSourceID='testDataSource'</Condition>
    <Task>
      <Send BrokerId="broker1" Queue="SMILA.connectivity" RecordFilter="no-filter">
        <SetProperty Name="doAdd">no, just delete</SetProperty>
      </Send>
    </Task>
  </Rule>
  
</QueueWorkerRouterConfig>
